<% if (typeof errors != 'undefined') {%>
    <ul class="list-unstyled text-danger">
        <% errors.forEach (error => { %>
            <li><%= error.msg%></li>
        <% }) %> 
    </ul>
    
<% } %>    

<div class="row justify-content-center">
    <div class="col 8">
        <form action="/contacto" method="post">
            <div>
                <label for="nombre" class="form-label">Nombre: </label>
                <input type="text" id="nombre" name="nombre" class="form-control" value="<%= values.nombre %>" >
            </div>
            <div>
                <label for="email" class="form-label">Email: </label>
                <input type="email" id="email" name="email"  class="form-control" value="<%= values.email %>">
            </div>
            <div>
                <label for="mensaje">Mensaje: </label>
                <textarea id="mensaje" name="mensaje"  class="form-control" cols="30" rows="10"><%= values.mensaje%> </textarea>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Enviar</button>
            </form>
    </div>
</div>
